---
import Hitokoto from "../index/hitokoto.jsx";
import Unsplash from "../index/unsplash.jsx";
---

<div class="wrap">
    <div class="unsplash">
        <Unsplash client:load />
    </div>
    <div class="unsplash-cover"></div>
    <div class="hitokoto">
        <Hitokoto client:load />
    </div>
    <div class="input">
        <input type="text" />
    </div>
</div>
<style>
    .wrap {
        width: 50%;
        border-radius: 24px;
        color: white;
        box-sizing: border-box;
        position: relative;
        overflow: hidden;
    }
    .unsplash,
    .unsplash-cover {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
    .unsplash-cover {
        background-color: rgba(0, 0, 0, 0.2);
    }
    .input,
    .hitokoto {
        padding: 24px;
    }
    input {
        padding: 4px;
        background-color: blue;
        color: green;
        border: none;
    }
    input:focus-visible {
        outline: none;
    }
</style>
