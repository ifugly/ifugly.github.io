---
import Hitokoto from "../index/hitokoto.jsx";
import Unsplash from "../index/unsplash.jsx";
---

<div class="wrap">
    <div class="unsplash">
        <Unsplash client:load />
    </div>
    <div class="unsplash-cover"></div>
    <div class="hitokoto">
        <Hitokoto client:load />
    </div>
    <div class="input">
        <input type="text" />
    </div>
    <div class="btns">
        <div class="bing"></div>
        <div class="google"></div>
        <div class="baidu"></div>
    </div>
</div>
<script></script>
<style>
    .wrap {
        width: 100%;
        color: white;
        box-sizing: border-box;
        position: relative;
        overflow: hidden;
    }
    .unsplash,
    .unsplash-cover {
        position: absolute;
        width: 100%;
        height: 100%;
        z-index: -1;
    }
    .unsplash-cover {
        background-color: rgba(0, 0, 0, 0.2);
    }
    .hitokoto {
        padding: 24px;
    }
    .btns,
    .input {
        margin: 0 auto 24px;
        width: 70%;
        max-width: 500px;
    }
    input {
        width: 100%;
        box-sizing: border-box;
        padding: 16px 24px;
        background-color: blue;
        border-radius: 50px;
        color: red;
        border: none;
        font-size: 20px;
    }
    input:focus-visible {
        outline: none;
    }
    .btns {
        width: 70%;
        max-width: 500px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .bing,
    .google,
    .baidu {
        width: 44px;
        height: 44px;
        background-color: rgba(0, 0, 0, 0.2);
    }
</style>
